                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ test2 }}</td>
                                    <td>{{ numeral_to_roman2 }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            {% if numeral_to_roman2 == roman2 %}
                                <p class="true waves-effect waves-light btn">TRUE</p>
                            {% else %}
                                <p class="false waves-effect waves-light btn">FALSE</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col m3">
                        <div class="row">
                            <h6>Test nb entre 1 et 999</h6>
                            <table class="centered">
                                <thead>
                                <tr>
                                    <th>Numeral</th>
                                    <th>Roman</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ test3 }}</td>
                                    <td>{{ numeral_to_roman3 }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            {% if numeral_to_roman3 == roman3 %}
                                <p class="true waves-effect waves-light btn">TRUE</p>
                            {% else %}
                                <p class="false waves-effect waves-light btn">FALSE</p>
